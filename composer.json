        "ext-msgpack": "^0.5",
        "ext-yaml": "^1.2",

        "rych/bencode": "dev-master",
        "2tvenom/cborencode": "dev-master",
        "kunststube/rison": "dev-master",
        "mihai-stancu/sereal": "dev-master",
        "phuedx/tnetstring": "dev-master",
